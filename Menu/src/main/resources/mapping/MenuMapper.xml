<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zcy.dao.MenuDao">

    <resultMap id="menuMap" type="com.zcy.entity.Menu">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="flavor" column="flavor"/>
<!--        <association property="type" select="com.zcy.dao.TypeDao.findById" column="tid"/>-->
        <association property="type" javaType="Type">
            <result property="id" column="tid"></result>
            <result property="name" column="tname"></result>
        </association>
    </resultMap>

    <select id="findAll" resultMap="menuMap">
        select m.id, m.name, m.price, m.flavor, t.name tname from t_menu m
        left join t_type t
        on m.tid=t.id
        limit #{start}, #{row}
	</select>

    <select id="count" resultType="int">
		select count(*) from t_menu;
	</select>

    <insert id="save" parameterType="Menu">
		insert into t_menu(name,price,flavor,tid) values(#{name},#{price},#{flavor},#{type.id})
	</insert>

    <select id="findById" resultMap="menuMap">
		select id,name,price,flavor,tid from t_menu where id = #{id}
	</select>

    <update id="update" parameterType="Menu">
		update t_menu set name = #{name},price = #{price},flavor = #{flavor},tid=#{type.id} where id = #{id}
	</update>

    <delete id="deleteById" parameterType="int">
		delete from t_menu where id = #{id}
	</delete>


</mapper>